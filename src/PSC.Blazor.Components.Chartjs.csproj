<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>ChartJs component for Blazor. Compatible with client-side and server-side Blazor applications.</Description>
    <PackageIcon>psc_logo.png</PackageIcon>
    <ApplicationIcon>psc_ico.ico</ApplicationIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>Add GroupYAxis - Minor bugs</PackageReleaseNotes>
    <PackAsTool>False</PackAsTool>
    <Copyright>Enrico Rossini - PureSourceCode.com</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageTags>chartjs, blazor, c#, blazor-webassembly, blazor-server, blazor-component, wasm, asp.net</PackageTags>
    <PackageProjectUrl>https://www.puresourcecode.com/dotnet/blazor/blazor-component-for-chartjs/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/erossini/BlazorChartjs</RepositoryUrl>
    <Title>ChartJs component for Blazor</Title>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="psc_ico.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.16" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <None Update="psc_logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
